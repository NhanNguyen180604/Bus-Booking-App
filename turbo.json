{
  "$schema": "https://turborepo.com/schema.json",
  "globalEnv": [
    "port",
    "frontend_url",
    "jwt__access_token__secret",
    "jwt__access_token__expires_in",
    "jwt__refresh_token__secret",
    "jwt__refresh_token__expires_in",
    "cookie__secret",
    "cookie__access_token_max_age",
    "cookie__refresh_token_max_age",
    "session__secret",
    "database__url",
    "database__session_db_url",
    "oauth2__google__client_id",
    "oauth2__google__client_secret",
    "oauth2__google__callback_url",
    "oauth2__facebook__client_id",
    "oauth2__facebook__client_secret",
    "oauth2__facebook__callback_url",
    "oauth2__github__client_id",
    "oauth2__github__client_secret",
    "oauth2__github__callback_url",
    "NEXT_PUBLIC_BACKEND_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    }
  }
}